name:                gpcc
version:             0.0.1
synopsis:            A front end compiler for the Glasgow Parallel Reduction Machine
-- description:         
homepage:            https://github.com/RossMeikleham/Gannet-Parallel-C
license:             BSD2
license-file:        LICENSE
author:              Ross Meikleham
maintainer:          rossmeikleham@hotmail.co.uk
-- copyright:           
category:            Language
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

Test-Suite Gannet-Tests
  test-module:        TestMain
  type:               detailed-0.9
  hs-source-dirs:     tests src tests/GPC  
  build-depends:      base >=4.6 && <4.8, parsec >=3.1 && <3.2, HUnit, Cabal, wl-pprint, split, 
                      containers, mtl, errors, lens >= 4.5
  ghc-options  :      -Wall -fno-warn-missing-signatures 
  default-language:   Haskell2010
  other-modules:      GPC.AST GPC.ParserTests GPC.Lexer GPC.Parser GPC.Tests GPC.CodeGen
                      GPC.CodeGenTests GPC.TypeTests GPC.TypeScopeChecker
executable gpcc
  main-is:             Main.hs
  -- other-modules:       
  other-extensions:    NoMonomorphismRestriction
  build-depends:       base >=4.6 && <4.8, parsec >=3.1 && <3.2, wl-pprint, split, containers, mtl,
                       errors, lens >= 4.5
  ghc-options:         -Wall -fno-warn-missing-signatures
  hs-source-dirs:      src/GPC src
  default-language:    Haskell2010
